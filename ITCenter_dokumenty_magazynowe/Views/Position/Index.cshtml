@{
    ViewData["Title"] = "Position";
}

<div class="text-center">
    <h1 class="display-4">Spis dokumentów magazynowych</h1>
</div>

@(Html.DevExtreme().DataGrid<ITCenter_dokumenty_magazynowe.Models.DbModels.Position>()
    .DataSource(ds => ds.Mvc()
        .Controller("Positions")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("Id")
    )
    .RemoteOperations(true)
    .Columns(columns =>
    {

        columns.AddFor(m => m.ProductName).Caption("Nazwa produktu");

        columns.AddFor(m => m.Quantity);

        columns.AddFor(m => m.NetPrice);

        columns.AddFor(m => m.GrossPrice).AllowEditing(false);

        columns.AddFor(m => m.WarehouseDocId).Lookup(lookup => lookup
            .DataSource(ds => ds.WebApi().Controller("Positions").LoadAction("WarehouseDocsLookup").Key("Value"))
            .ValueExpr("Value")
            .DisplayExpr("Text")
        );
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
    )

